doctype html
html(ng-app='bleach')
	head
		title= title
		link(rel='stylesheet', href='/css/client.css')
		link(rel='stylesheet', href='/css/metro-bootstrap.min.css')
		script(src='/lib/angular/angular.js')
		script(src='/lib/angular/angular-route.js')
		script(src='/lib/jquery/jquery.min.js')
		script(src='/lib/jquery/jquery.widget.min.js')
		script(src='/lib/jquery/jquery.mousewheel.js')
		script(src='/lib/jquery/jquery.easing.min.js')
		script(src='/lib/metro.min.js')
		//script(src='/lib/metro-loader.js')
		script(src='/client.js')

	- var jsFilesToAppend = data || [];
		each jsFile in jsFilesToAppend
			script(src= jsFile)

	body(class='metro', ng-controller='index')
		#top-bar.bleach-stage(ng-include='"/src/top-bar/top-bar.tpl.html"')
		#left-stage.bleach-stage(ng-include='"/src/left-menu/left-menu.tpl.html"')
		#right-stage.bleach-stage
			#router-guide
			#view-port(ng-view)