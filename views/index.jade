doctype html
html(ng-app='bleach')
	head
		title= title
		link(rel='stylesheet', href='/stylesheets/style.css')
		link(rel='stylesheet', href='/stylesheets/metro-bootstrap.min.css')
		script(src='/lib/angular/angular.js')
		script(src='/lib/angular/angular-route.js')
		script(src='/lib/jquery/jquery.min.js')
		script(src='/lib/jquery/jquery.widget.min.js')
		script(src='/lib/jquery/jquery.mousewheel.js')
		script(src='/lib/jquery/jquery.easing.min.js')
		script(src='/lib/metro.min.js')
		script(src='/client.js')

	- var jsFilesToAppend = data || [];
		each jsFile in jsFilesToAppend
			script(src= jsFile)

	body(class='metro', ng-controller='appController')
		#left-stage.bleach-stage
			#left-stage-header.bleach-header
			#left-stage-content.bleach-content
				div(ng-include='"/src/left-menu/left-menu.tpl.html"')

		#right-stage.bleach-stage
			#right-stage-header.bleach-header
				i.icon-lines#left-menu-switcher(ng-click='toggleLeftMenu()')
			#right-stage-content.bleach-content
				div(ng-view)
