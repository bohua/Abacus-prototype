				div.menu-header
				#left-menu.accordion(data-role='accordion')

					div.accordion-frame
						a.heading(href='#') 生产综合
						div.content: p Content1

					div.accordion-frame
						a.heading(href='#') 水量分析
						div.content: p Content2//


		#right-stage.bleach-stage
